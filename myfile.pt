{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_ami_ID": "",
    "aws_ami_users":""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `aws_ami_ID`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Ubuntu-vim {{timestamp}}",
    "ami_regions": "Test",
    "ami_users": "{{ user `aws_ami_users` }}"
  }],
 
 "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install -y apache2"
    ]
  }]

"post-processors": [{
  "type": "manifest",
  "output": "manifest.json",
  "strip_path": true
}]

}

